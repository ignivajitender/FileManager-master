<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.igniva.filemanager"
    android:versionCode="44"
    android:versionName="3.1.1">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/filemanager"
        tools:replace="android:label">
        <activity
            android:name=".activities.MainActivity"
            android:label="File Manager"
            android:launchMode="singleInstance"
            android:theme="@style/appCompatLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />

                <data android:mimeType="*/*" />

                <category android:name="android.intent.category.OPENABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.RINGTONE_PICKER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:mimeType="application/zip" />
                <data android:mimeType="application/x-rar-compressed" /> <!-- <category android:name="android.intent.category.OPENABLE" /> -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Preferences"
            android:label="@string/setting"
            android:theme="@style/appCompatLight"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.APPLICATION_PREFERENCES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TextReader"
            android:label="@string/textreader"
            android:theme="@style/appCompatLight">
            <intent-filter android:label="Amaze Text Editor">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DbViewer"
            android:label="@string/databasereader"
            android:screenOrientation="locked"
            android:theme="@style/appCompatLight">
            <intent-filter android:label="Amaze Database Reader">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="db/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:theme="@style/aboutLight" />

        <service
            android:name=".services.ExtractService"
            android:label="Extracting" />
        <service
            android:name=".services.ZipTask"
            android:label="Compressing" />
        <service
            android:name=".services.CopyService"
            android:label="Copying"
            android:process=":amaze" />
        <service
            android:name=".services.ftpservice.FTPService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".services.ftpservice.FTPReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.igniva.filemanager.services.ftpservice.FTPReceiver.ACTION_START_FTPSERVER" />
                <action android:name="com.igniva.filemanager.services.ftpservice.FTPReceiver.ACTION_STOP_FTPSERVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".ui.notifications.FTPNotification"
            android:exported="true">
            <intent-filter>
                <action android:name="com.igniva.filemanager.services.ftpservice.FTPReceiver.FTPSERVER_STARTED" />
                <action android:name="com.igniva.filemanager.services.ftpservice.FTPReceiver.FTPSERVER_STOPPED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.DeviceDefault">

        </activity>
        <activity android:name=".activities.SecondActivity"></activity>
    </application>

</manifest>